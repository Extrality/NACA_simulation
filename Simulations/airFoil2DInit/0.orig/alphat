FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      alphat;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -1 0 0 0 0];

internalField   uniform 1.569984e-5; // rho*nu_t/Pr_t, rho = 1.184, nu_t = 1.56e-5, Pr_t = 0.85

boundaryField
{
    aerofoil
    {
        type            compressible::alphatWallFunction;
        Prt             0.85;
        value           uniform 0;
    }
    
    freestream
    {
        type            calculated;
        value           uniform 1.569984e-5;
    }

    frontAndBack
    {
        type            empty;
    }
}


