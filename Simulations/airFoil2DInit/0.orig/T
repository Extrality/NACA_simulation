FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

field          298.15;

internalField   uniform $field;

boundaryField
{
    aerofoil
    {
        type            zeroGradient;
    }
    
    freestream
    {
        type                 freestream;
        freestreamValue      uniform $field;
    }

    frontAndBack
    {
        type            empty;
    }
}


